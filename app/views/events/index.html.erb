<h1>Events</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Date</th>
      <th>Address</th>
      <th>Creators</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <td><%= event.event_address %></td>
        <td>
          <% if event.creators.any? %>
            <ul>
              <% event.creators.each do |creator| %>
                <li><%= creator.email %></li>
              <% end %>
            </ul>
          <% else %>
            No creators
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
