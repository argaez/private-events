<h2 class="text-center mt-4">Log In</h2>

<div class="row justify-content-center">
  <div class="col-md-6">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "card p-4 shadow-sm" }) do |f| %>

      <!-- Email field -->
      <div class="form-group mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
      </div>

      <!-- Password field -->
      <div class="form-group mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter your password" %>
      </div>

      <!-- Remember me checkbox -->
      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>

      <!-- Submit button -->
      <div class="form-group text-center">
        <%= f.submit "Log In", class: "btn btn-primary w-100 rounded-pill shadow-sm" %>
      </div>

    <% end %>

    <!-- Links -->
    <div class="mt-3 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

