<h2 class="text-center mt-4">Change your password</h2>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "card p-4 shadow-sm" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <!-- New password field -->
        <div class="mb-3">
          <%= f.label :password, "New password", class: "form-label" %>
          <% if @minimum_password_length %>
            <small class="form-text text-muted">(Minimum of <%= @minimum_password_length %> characters)</small>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "Enter new password" %>
        </div>

        <!-- Password confirmation field -->
        <div class="mb-3">
          <%= f.label :password_confirmation, "Confirm new password", class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm new password" %>
        </div>

        <!-- Submit button -->
        <div class="text-center">
          <%= f.submit "Change my password", class: "btn btn-primary w-100 rounded-pill" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>
