<h2 class="text-center mt-4">Edit <%= resource_name.to_s.humanize %></h2>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "card p-4 shadow-sm" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group mb-3">
        <%= f.label :Name, class: "form-label" %>
        <%= f.text_field :full_name, autofocus: true, autocomplete: "Name", class: "form-control", placeholder: "Enter full name" %>
      </div>

      <!-- Email field -->
      <div class="form-group mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :phone, class: "form-label" %>
        <%= f.text_field :phone, autocomplete: "tel", class: "form-control", placeholder: "Enter your phone number" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :address, class: "form-label" %>
        <%= f.text_field :address, class: "form-control", placeholder: "Enter your address" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :username, class: "form-label" %>
        <%= f.text_field :username, autocomplete: "username", class: "form-control", placeholder: "Choose a username" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :birthday, class: "form-label" %>
        <%= f.date_field :birthday, class: "form-control", placeholder: "Select your birthday" %>
      </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="alert alert-info mb-3">
            Currently waiting confirmation for: <%= resource.unconfirmed_email %>
          </div>
        <% end %>

        <!-- Password field -->
        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Enter new password" %>
          <small class="form-text text-muted">(Leave blank if you don't want to change it)</small>
          <% if @minimum_password_length %>
            <small class="form-text text-muted"><%= @minimum_password_length %> characters minimum</small>
          <% end %>
        </div>

        <!-- Password confirmation field -->
        <div class="mb-3">
          <%= f.label :password_confirmation, class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm new password" %>
        </div>

        <!-- Current password field -->
        <div class="mb-3">
          <%= f.label :current_password, class: "form-label" %>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "Enter your current password" %>
          <small class="form-text text-muted">(We need your current password to confirm your changes)</small>
        </div>

        <!-- Submit button -->
        <div class="mb-3 text-center">
          <%= f.submit "Update", class: "btn btn-primary w-100 rounded-pill" %>
        </div>

      <% end %>
    </div>
  </div>
</div>

<div class="container mt-4">
  <h3 class="text-center">Cancel my account</h3>
  <div class="text-center">
    <%= button_to "Cancel my account", registration_path(resource_name), class: "btn btn-danger rounded-pill", data: { confirm: "Are you sure you want to cancel your account?", turbo_confirm: "Are you sure you want to cancel your account?" }, method: :delete %>
  </div>

  <div class="text-center mt-3">
    <%= link_to "Back", :back, class: "btn btn-secondary rounded-pill" %>
  </div>
</div>
